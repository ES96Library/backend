<center><h1>Listing items</h1>
<% params["pair"].each do |hash,pair| %>
<b><%= pair["property_name"] %>:</b> <%= pair["value"] %><br>
<% end %>
<br> 
<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @items.each do |item| %>
  <tr>
	<td><%= link_to image_tag(item.image.url(:thumb)), item %></td>
  </tr>
<% end %>
</table>
<br>

<%= will_paginate @items %>
<br />
</center>
